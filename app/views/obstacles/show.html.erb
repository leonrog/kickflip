<div class="container d-flex align-items-center justify-content-center mt-3" style="width:1100px;">
    <h3 class="text-center mr-3" ><%= @obstacle.name %></h3>
  </div>
  <div class="d-flex justify-content-center">
       <i class="fas fa-map-marker-alt ml-3"><span class="text-center location-txt ml-2"><%= @obstacle.location %></span></i> </h4>
  </div>
<div class="header">

  <div class="container d-flex align-items-center justify-content-between mt-3" style="width:1100px;">

    <div class="flex-item1">
      <% if @obstacle.photo.present? %>
        <%= cl_image_tag @obstacle.photo.key, class: "show-img", crop: :fill %>
      <% end %>
    </div>
    <div class="show-txt">
      <div class="card card-info mb-2 flex-item3">
        <div class="details">
          <div class="description">
            <h4> <%= @obstacle.name %>   <span style="font-size:17px;"> - <span class="price"> <%= @obstacle.price %> €</span> per night  </span></h4>

            <hr>
            <span class="sub-title mb-3">description </span>
            <h5><%= @obstacle.description %> </h5>
            <span class="sub-title">sold by </span>
            <h5>  <%= @obstacle.user.email %> </h5>
          </div>
        </div>
      </div>
     <div class="card card-info mb-2 p-2 width:400px flex-item2">
      <p class="mt-1 mb-2">Book this obstacle</p>
        <%= render 'bookings/form' %>

      </div>
    </div>
  </div>

</div>
  <div class="container mt-3" style="width:1100px; max-width: 1100px; ">

        <div class="card">
          <% @reviews.each do |review| %>
            <% if review.present? %>
              <div class="notification">
                <% if review.user.photo.present? %>
                <%= cl_image_tag review.user.photo.key, class: "avatar dropdown-toggle"%>
                <% end %>
                <div class="notification-content">
                  <p><small> <%= review.created_at %> </small></p>
                  <p><%= review.description %></p>
                  <p> <%="⭐️"* review.rating  %></p>
                </div>
              </div>
          <% else %>
            <p>Be the first to write a review</p>
            <% end %>
          <% end %>
        <%= link_to "write review", new_obstacle_review_path(@obstacle),class: "btn btn-flat btn-color d-flex justify-content-center" %>
      </div>
    </div>



<style type="text/css">
  .show-img{
    width: 400px;
    height: auto;
    border-radius: 5px;
    flex-grow: 1;
  }
  .show-txt{
  }
  .price{
    color:red;
  }
  .sub-title{
    color:#8D8D8D;
    letter-spacing: 1px;
    font-size:12px;
  }

  .location-txt{
    font-family: "Work Sans", "Helvetica", "sans-serif";
    font-size:16px;
    font-weight: normal;
  }
</style>
