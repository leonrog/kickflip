<h1 class="text-center">User information</h1>
<div class="container">
  <div class="card p-3 d-flex justify-content-center m-3">
    <p><strong>Email</strong></p>
    <%= @user.email %>
  </div>
    <% if @user.photo.attached? %>
      <div class="card p-3 d-flex justify-content-center m-3">
        <p><strong>Photo</strong></p>
        <%= cl_image_tag @user.photo.key, height: 300, width: 400, crop: :fill %>
      </div>
    <% else %>
    <div class="card p-3 d-flex justify-content-center m-3">
      <%= link_to "Attach photo", edit_my_profile_path, style: "font-weight: bold"%>
    </div>
    <% end %>

    <p class="text-center">
      <%= link_to "EDIT INFO", edit_my_profile_path , class: "btn btn-flat btn-color"%>
    </p>

</div>


